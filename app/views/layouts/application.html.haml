%html{'ng-app' => 'app'}
  %head
    %meta{charset: 'utf-8'}
    %title Memo
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}/
    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'
    - if Rails.env.development?
      = javascript_include_tag 'faker/MinFaker'
    = csrf_meta_tags
  %body
    .container
      = yield